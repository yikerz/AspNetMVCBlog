@* 38. Declare @model *@
@model Blog.Web.Models.View.EditTagRequest

@* 34. Create Edit view with header *@
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>

@* 39. Conditional render update form *@
<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="id" readonly asp-for="Id" />
            </div>

            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="name" asp-for="Name" />
            </div>

            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="displayName" asp-for="DisplayName" />
            </div>

            <div class="mb-3">
                <button class="btn btn-dark" type="submit">Update</button>
            </div>
                
        </form>
    }
    else
    {
        <p>Tag not found</p>
    }
</div>