@model Blog.Web.Models.View.AddTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" id="name" asp-for="Name" required />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input class="form-control" type="text" id="displayName" asp-for="DisplayName" required />
            <span class="text-danger" asp-validation-for="DisplayName"></span>
        </div>

        <div class="mb-3">
            <button class="btn btn-dark" type="submit">Submit</button>
        </div>
    </form>
</div>